+otError RadioSpinel<InterfaceType>::SetBusSpeed(uint32_t speed)
+{
+    uint32_t current = mSpinelInterface.GetBusSpeed();
+    otError  error = OT_ERROR_NONE;
+
+    mSpinelInterface.SetBusSpeed(MIN(current, speed));
+
